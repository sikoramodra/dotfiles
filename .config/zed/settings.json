{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "enabled": false,
    "button": false
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  // "relative_line_numbers": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--issues-exit-code=1"
        ]
      }
    },
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80
        }
      }
    }
  },
  "journal": {
    "hour_format": "hour24"
  },
  "cursor_blink": false,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_family": "Source Code Pro",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "title_bar": {
    "show_sign_in": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "scrollbar": {
    "cursors": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "activate_on_close": "left_neighbour"
  },
  "format_on_save": "on",
  "wrap_guides": [80, 100],
  "tab_size": 2,
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Svelte": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Go": {
      "tab_size": 4,
      "language_servers": ["gopls", "golangci-lint"]
    },
    "Shell Script": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["--filename", "{buffer_path}", "--indent", "4"]
        }
      }
    },
    "C++": {
      "tab_size": 4
    },
    "CMake": {
      "tab_size": 4
    },
    "QML": {
      "tab_size": 4
    },
    "XML": {
      "tab_size": 4
    },
    "Python": {
      "tab_size": 4,
      "language_servers": ["basedpyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": { "name": "ruff" }
        }
      ]
    }
  },
  "autosave": "on_focus_change",
  "autoscroll_on_clicks": true,
  "restore_on_startup": "none",
  "auto_update": false,
  "auto_install_extensions": {
    "nginx": true,
    "golangci-lint": true,
    "basher": true,
    "env": true,
    "toml": true,
    "csv": true,
    "rainbow-csv": true,
    "dockerfile": true,
    "docker-compose": true,
    "make": true,
    "sql": true,
    "log": true,
    "git-firefly": true,
    "astro": true,
    "svelte": true,
    "biome": true,
    "qml": true,
    "neocmake": true,
    "xml": true,
    "basedpyright": true,
    "ruff": true
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "line_height": "standard"
  }
}
