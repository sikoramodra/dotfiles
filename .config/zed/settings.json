{
  "features": {
    "edit_prediction_provider": "zed"
  },
  // TODO: snippets, language/lsp, diagnostics, ?disable rounded corners
  "assistant": {
    "button": true,
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:14b"
    },
    "version": "2"
  },
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "journal": {
    "hour_format": "hour24"
  },
  "cursor_blink": false,
  "ui_font_family": "Zed Plex Sans",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_family": "Source Code Pro",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "scrollbar": {
    "show": "auto",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": false,
    "activate_on_close": "left_neighbour",
    "show_close_button": "hover"
  },
  "wrap_guides": [80, 100],
  "tab_size": 4,
  "languages": {
    "JSONC": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2
    }
  },
  "autosave": "on_focus_change",
  "autoscroll_on_clicks": true,
  "restore_on_startup": "none",
  "auto_update": false,
  "auto_install_extensions": {
    "nginx": true,
    "golangci-lint": true,
    "basher": true,
    "env": true,
    "csv": true,
    "rainbow-csv": true,
    "dockerfile": true,
    "docker-compose": true,
    "make": true,
    "sql": true,
    "log": true,
    "git-firefly": false
    // "one-dark-extended-theme": false
    // "astro": false,
    // "svelte": false,
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "option_as_meta": false,
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "line_height": "standard",
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "always"
    }
  }
}
